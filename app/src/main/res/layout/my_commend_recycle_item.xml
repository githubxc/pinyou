<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corners">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginRight="60dp">

    <RelativeLayout
        android:id="@+id/rl_commend_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xc.pinyou.view.CircleImageView
            android:id="@+id/commend_user_avater"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/size_10"
            android:background="@mipmap/avater"/>

        <TextView
            android:id="@+id/commend_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/commend_user_avater"
            android:text="用户名" />

        <TextView
            android:id="@+id/commend_user_credibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/commend_user_name"
            android:text="信誉度" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_commend_info"
        android:layout_marginTop="@dimen/size_10">

        <RelativeLayout
            android:id="@+id/rl_start_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5">

            <ImageView
                android:id="@+id/commend_start_time"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/start_time"
                android:layout_marginLeft="@dimen/size_10"/>

            <TextView
                android:id="@+id/tv_commend_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/commend_start_time"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:hint="出发时间"
                android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_end_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:layout_below="@id/rl_start_point"
            android:paddingBottom="@dimen/size_5">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/end_local"
                android:layout_marginLeft="@dimen/size_10"/>

            <TextView
                android:id="@+id/tv_commend_start_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_location"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:hint="出发点"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_jiantouyou"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/tv_commend_start_point"
                android:layout_marginLeft="@dimen/size_10"
                android:background="@mipmap/jiantouyou"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_commend_end_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_jiantouyou"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginRight="@dimen/size_10"
                android:hint="终点"
                android:textSize="15sp"/>
        </RelativeLayout>

    </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_commend_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去评价"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_20"
        android:layout_centerVertical="true"
        android:padding="@dimen/size_10"
        android:background="@drawable/text_black_stroke" />

    <ImageView
        android:id="@+id/iv_commend"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_20"
        android:src="@mipmap/commend"
        android:visibility="gone"/>

</RelativeLayout>
