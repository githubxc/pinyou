<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_view_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="注  册"
        android:textColor="@color/app_qing"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_view_register"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/qianzhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="+86"
            android:textColor="@color/app_qing"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_register_phonenumber"
            android:layout_toRightOf="@id/qianzhui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="请输入手机号" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_register_psd"
        android:layout_below="@id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginTop="@dimen/size_10"
        android:textSize="15sp"
        android:hint="请输入密码" />

    <EditText
        android:id="@+id/et_register_repsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_register_psd"
        android:inputType="textPassword"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginTop="@dimen/size_10"
        android:textSize="15sp"
        android:hint="确认密码" />

    <RelativeLayout
        android:id="@+id/rl_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_register_repsd"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_register_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/timeButton"
            android:layout_toStartOf="@+id/timeButton"
            android:hint="请输入验证码"
            android:textSize="15sp" />

        <com.xc.pinyou.view.TimeButton
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/bt_time_shape"
            android:id="@+id/timeButton" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_psd"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/btn_register"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bt_shape"
            android:text="立即注册"
            android:textColor="@color/app_white"
            android:textSize="18dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_register"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_register_login"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="已有账号，立即登录"/>

    </RelativeLayout>
</RelativeLayout>